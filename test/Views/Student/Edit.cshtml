@model test.DbContext.mst_student

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Student</legend>
         @Html.HiddenFor(model => model.student_id)
        <div class="editor-label">
            @Html.LabelFor(model => model.student_name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.student_name)
            @Html.ValidationMessageFor(model => model.student_name)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "studentlist")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
